<% title "Editing Room: #{@room.name}" %>

<h3><%= yield(:title) %></h3>

<% form_for(@room) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<p class="notes">Fields marked with <span class="required">*</span> are required fields</p>

<br/>

<p>
  <%= link_to "&laquo; Go back to the room", @room %>
</p>