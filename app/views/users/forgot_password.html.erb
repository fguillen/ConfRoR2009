<% title t('views.users.reset_password.title') %>

<h3><%= yield(:title) %></h3>

<% form_tag url_for(:action => 'forgot_password') do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, "", :size => 50 %>
  </p>
  <p>
    <%= submit_tag t('views.users.reset_password.get_new_password') %>
  </p>
<% end %>

<br/>

<p>
  <%= link_to "&laquo; #{t('views.users.go_back_to_login')}", login_path %>
</p>