<% title 'New Event' %>

<% form_for(@event) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<p class="notes">Fields marked with <span class="required">*</span> are required fields</p>

<p>
  <%= link_to "&laquo; Go back to events", events_path %>
</p>