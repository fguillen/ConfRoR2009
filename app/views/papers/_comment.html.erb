<div class="comment">
  <%=
    gravatar(
      comment.user.email, 
      :size => 32, 
      :default => "#{base_url}/images/avatar.png",
      :class => 'avatar',
      :alt => t('views.papers.comments.avatar_from', :name => comment.user.name)
    )
  %>

  <p>
    <%= link_to comment.user.name, user_path(comment.user) %> <span class="date"><%= t('views.papers.comments.said_on', :date => comment.created_at) %></span><br/>
    <%= comment.text %>
  </p>
</div>